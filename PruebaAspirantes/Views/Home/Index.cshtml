@model List<ModelAspirantes>

@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    @*<p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>*@
</div>

<div class="card">
    <div class="card-header">
        Lista de Aspirantes
    </div>
    <div class="card-body">

        <a asp-action="Aspirante" asp-controller="Home" asp-route-Id="0" class="btn btn-success btn-sm">Nuevo Aspirante</a>
        @*<a asp-action="test" asp-controller="Home" class="btn btn-success">test</a>*@
        <hr />
        <table class="table">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Nombre</th>
                    <th>Apellido</th>
                    <th>Correo Electronico</th>
                    <th>Numero Telefonico</th>
                    <th>Lugar de Nacimiento</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.nombre</td>
                        <td>@item.apellido</td>
                        <td>@item.correoElectronico</td>
                        <td>@item.numTelefonico</td>
                        <td>@item.lugarNacimiento</td>
                        <td>
                            <a asp-action="Aspirante" asp-controller="Home" asp-route-Id="@item.Id" class="btn btn-primary btn-sm">Editar</a>
                            <a asp-action="Eliminar" asp-controller="Home" asp-route-Id="@item.Id" class="btn btn-danger btn-sm">Eliminar</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

</div>